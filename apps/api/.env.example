# ===========================================
# API Worker - Environment Variables
# ===========================================
#
# These variables are used by wrangler for local development.
# For production, set secrets via: wrangler secret put <KEY>
#
# ===========================================

# Environment mode
ENVIRONMENT=development

# ===========================================
# Authentication
# ===========================================

# Secret key for signing sessions
# Generate with: openssl rand -hex 32
AUTH_SECRET=your_auth_secret_key_here

# Session expiry in days
SESSION_EXPIRY_DAYS=30

# ===========================================
# Notification Channels
# ===========================================

# Telegram Bot Configuration
# Create bot via @BotFather, get chat ID via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Provider (Resend, SendGrid, etc.)
EMAIL_API_KEY=
EMAIL_FROM=noreply@localhost

# ===========================================
# Webhook Configuration
# ===========================================

# Secret for verifying webhook signatures
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# ===========================================
# File Upload
# ===========================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed MIME types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# Rate Limiting
# ===========================================

# Requests per minute
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10

# ===========================================
# Development Options
# ===========================================

# Enable debug logging
DEBUG=false

# Skip email verification (development only!)
SKIP_EMAIL_VERIFICATION=true
